<div class="container-fluid">
  {{#each model as |playerStampede| }}
    <div class="col-sm-4">
      <div class="panel panel-info">
        <div class="panel-heading container-fluid">
          <div class="row">
            <div class="col-xs-10">
              <h4 class="list-group-item-heading">{{playerStampede.name}}</h4>
              <p class="list-group-item-text">Shoots: {{playerStampede.shoots}}</p>
            </div>
            <div class="col-xs-2">
              <h4 class="list-group-item-heading pull-right">#{{playerStampede.number}}</h4>
              <p class="list-group-item-text pull-right">{{playerStampede.position}}</p>
            </div>
          </div>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th class="text-center col-xs-2">GP</th>
                  <th class="text-center col-xs-2">G</th>
                  <th class="text-center col-xs-2">A</th>
                  <th class="text-center col-xs-2">P</th>
                  <th class="text-center col-xs-2">PIM</th>
                  <th class="text-center col-xs-2">+/-</th>
                </tr>
              </thead>
              <tbody>
                <td class="text-center col-xs-2">{{playerStampede.gp}}</td>
                <td class="text-center col-xs-2">{{playerStampede.goals}}</td>
                <td class="text-center col-xs-2">{{playerStampede.assists}}</td>
                <td class="text-center col-xs-2">{{playerStampede.points}}</td>
                <td class="text-center col-xs-2">{{playerStampede.pim}}</td>
                <td class="text-center col-xs-2">{{playerStampede.plusMinus}}</td>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
</div>
{{outlet}}
