<div class="container-fluid">
  {{#each model as |scheduleThunder|}}
    <div class="col-md-6">
      <div class="panel panel-default">
        <div class="panel-heading">
          <div class="panel-title">
            <h4 class="text-center">{{scheduleThunder.teamGame}} - {{scheduleThunder.home}} v {{scheduleThunder.away}}</h4>
          </div>
        </div>
        <div class="panel-body">
          <span class="pull-left">
            <img class="home-logo" src="{{scheduleThunder.homeLogo}}" alt="{{scheduleThunder.home}}">
          </span>
          <span>
            Details of the upcoming game
          </span>
          <span class="pull-right">
            <img class="away-logo" src="{{scheduleThunder.awayLogo}}" alt="{{scheduleThunder.away}}">
          </span>
        </div>
        <div class="panel-footer">
          <h6><span class="pull-left">
            {{scheduleThunder.venue}}
          </span>
          <span>
            Tickets
          </span>
          <span class="pull-right">
            {{scheduleThunder.date}}
          </span></h6>
        </div>
      </div>
    </div>
  {{/each}}
</div>
