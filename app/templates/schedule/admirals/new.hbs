<h2>Add a new Admirals Game</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Game Number</label>
    <div class="col-sm-10">
      {{input type="text" value=model.game class="form-control" placeholder="The NZIHL game number"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Home Team</label>
    <div class="col-sm-10">
      {{input type="text" value=model.home class="form-control" placeholder="The home team"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Away Team</label>
    <div class="col-sm-10">
      {{input type="text" value=model.away class="form-control" placeholder="The away team"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Venue</label>
    <div class="col-sm-10">
      {{input type="text" value=model.venue class="form-control" placeholder="The venue of the game"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Date</label>
    <div class="col-sm-10">
      {{input type="text" value=model.date class="form-control" placeholder="The date of the game"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveScheduleAdmirals' model}}>Add to Admirals Schedules</button>
    </div>
  </div>
</div>

{{outlet}}
